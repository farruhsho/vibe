rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Правила для пользователей
    match /users/{userId} {
      // Пользователь может читать и писать только свои данные
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Подколлекции пользователя
      match /listening_history/{historyId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /patterns/{patternId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /ratings/{ratingId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /favorites/{favoriteId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /history/{historyId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /search_history/{searchId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /mood_history/{moodId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Запретить доступ ко всем остальным документам
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
